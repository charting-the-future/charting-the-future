# Environment Configuration Template for Sector Committee Analysis System
# Copy this file to .env and fill in your actual values
# 
# IMPORTANT: Never commit your actual .env file to version control!
# The .env file should be added to .gitignore

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# OpenAI API Configuration (REQUIRED)
# Get your API key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Audit Logging Configuration
# Directory where audit logs will be stored (default: ./logs/audit)
AUDIT_LOG_DIR=./logs/audit

# Performance and Cost Configuration
# Maximum cost threshold per analysis in USD (default: 5.0)
MAX_COST_PER_ANALYSIS=5.0

# Maximum latency threshold per analysis in seconds (default: 300)
MAX_LATENCY_SECONDS=300

# Minimum confidence threshold for accepting results (default: 0.3)
MIN_CONFIDENCE_THRESHOLD=0.3

# =============================================================================
# DEVELOPMENT & TESTING CONFIGURATION
# =============================================================================

# Enable debug logging (default: false)
DEBUG_LOGGING=false

# Test environment configuration
# Shorter timeouts for testing (default: 60)
TEST_TIMEOUT_SECONDS=60

# Enable caching for development (default: false)
ENABLE_CACHING=false

# Cache TTL in seconds (default: 3600)
CACHE_TTL=3600

# Cache directory (default: .cache)
CACHE_DIR=.cache

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Environment indicator (development, staging, production)
ENVIRONMENT=development

# Enable performance monitoring (default: true)
ENABLE_PERFORMANCE_MONITORING=true

# Enable comprehensive audit logging (default: true)
ENABLE_AUDIT_LOGGING=true

# Rate limiting configuration
# Maximum requests per minute (default: 60)
MAX_REQUESTS_PER_MINUTE=60

# Concurrent analysis limit (default: 3)
MAX_CONCURRENT_ANALYSES=3

# =============================================================================
# COMPLIANCE & SECURITY CONFIGURATION
# =============================================================================

# Data retention policy in days (default: 2555 = 7 years)
AUDIT_RETENTION_DAYS=2555

# Enable encryption for audit logs (default: false)
ENCRYPT_AUDIT_LOGS=false

# Compliance mode (SR_11_7, MIFID_II, BOTH)
COMPLIANCE_MODE=BOTH

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Model configuration overrides
# Primary model for ensemble (default: gpt-4o-mini-deep-research-2025-06-26)
PRIMARY_MODEL=gpt-4o-mini-deep-research-2025-06-26

# Secondary model for ensemble (default: o3-deep-research-2025-06-26)
SECONDARY_MODEL=o3-deep-research-2025-06-26

# Default pillar weights (comma-separated: fundamentals,sentiment,technicals)
DEFAULT_WEIGHTS=0.5,0.3,0.2

# Enable batch processing (default: false)
ENABLE_BATCH_PROCESSING=false

# Batch size for concurrent processing (default: 10)
BATCH_SIZE=10

# =============================================================================
# MONITORING & ALERTING
# =============================================================================

# Enable alerting for cost thresholds (default: true)
ENABLE_COST_ALERTS=true

# Enable alerting for latency thresholds (default: true)
ENABLE_LATENCY_ALERTS=true

# Enable alerting for low confidence scores (default: true)
ENABLE_CONFIDENCE_ALERTS=true

# Webhook URL for alerts (optional)
ALERT_WEBHOOK_URL=

# =============================================================================
# EXAMPLE VALUES FOR REFERENCE
# =============================================================================

# Example OpenAI API key format:
# OPENAI_API_KEY=sk-abc123xyz789...

# Example audit log directory:
# AUDIT_LOG_DIR=/var/log/sector-committee/audit

# Example production configuration:
# ENVIRONMENT=production
# ENABLE_AUDIT_LOGGING=true
# ENABLE_PERFORMANCE_MONITORING=true
# MAX_CONCURRENT_ANALYSES=5
# AUDIT_RETENTION_DAYS=2555

# Example development configuration:
# ENVIRONMENT=development
# DEBUG_LOGGING=true
# ENABLE_CACHING=true
# TEST_TIMEOUT_SECONDS=30
